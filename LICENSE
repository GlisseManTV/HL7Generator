@echo off
setlocal enabledelayedexpansion

:: Définition des chemins
set "data_folder=C:\Tasksview\HL7interface\log"

:: Début du script
echo [INFO] Début du script

:: Récupération et formatage de la date
for /f "tokens=2-4 delims=/ " %%a in ('date /T') do (
    set "annee=%%c"
    set "mois=%%b"
    set "jour=%%a"
)
set "today=%annee%%mois%%jour%"
echo [INFO] Date du jour : %today%

:: Initialisation d'un cache des dossiers déjà créés
set "folders_created="

:: Parcours des fichiers du dossier principal
echo [INFO] Vérification des fichiers dans %data_folder%
for %%F in ("%data_folder%\*.hl7") do (
    set "filename=%%~nxF"
    
    :: Extraction et conversion de la date du fichier
    for /f "tokens=1 delims= " %%D in ("!filename!") do (
        for /f "tokens=1-3 delims=-" %%a in ("%%D") do (
            set "filedate=%%c%%b%%a"
        )
    )

    :: Vérification et déplacement si nécessaire
    if not "!filedate!" == "%today%" (
        set "dest_folder=%data_folder%\!filedate:~0,4!\!filedate:~4,2!\!filedate!"
        
        :: Vérifier si le dossier a déjà été créé
        echo "!folders_created!" | findstr /C:"!dest_folder!" >nul || (
            mkdir "!dest_folder!"
            set "folders_created=!folders_created! !dest_folder!"
            echo [INFO] Création du dossier : !dest_folder!
        )

        move "%%F" "!dest_folder!" >nul
        echo [INFO] Déplacement de "%%F" vers "!dest_folder!"
    )
)

echo [INFO] Fin du script
